<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Student Exam View</title>
  <style>
    .slider {
      width: 100%;
      height: 720px;
      border: 1px solid black;
      display: flex;
    }

    .s1 {
      width: 20%;
      height: 720px;
      border: 1px solid black;
      background-color: #f2f2f2;
    }

    .s2 {
      width: 80%;
      height: 720px;
      border: 1px solid black;
    }

    h1 {
      background-color: blue;
      padding: 10px;
      margin-top: -2px;
      color: white;
      text-align: center;
    }

    h2 {
      font-size: 1.9em;
      text-align: center;
      margin: 30px 0 10px;
    }

    .s1 ul {
      padding: 20px;
      list-style: none;
    }

    .s1 ul li {
      padding: 10px 0;
    }

    .s1 ul li a {
      text-decoration: none;
      color: blue;
      padding: 10px;
    }

    .s1 ul li a:hover {
      background-color: lightgray;
      padding: 5px;
    }

    table {
      margin: 0 auto;
      margin-top: 20px;
      border-collapse: collapse;
      width: 90%;
    }

    th {
      background-color: blue;
      color: white;
      padding: 10px;
    }

    td {
      padding: 10px;
      text-align: center;
    }
  </style>
</head>
<body>

  <div class="slider">
    <!-- Sidebar -->
    <div class="s1">
      <h2>Student</h2>
      <ul>
        <li><a href="/studentview">Student View</a></li>
        <li><a href="/studentexamview">Student Exam View</a></li>
        <li><a href="#">Download MCQ Pdf</a></li>
        <li><a href="#">Questions</a></li>
        <li><a href="#">Schedule</a></li>
      </ul>
    </div>

    <!-- Main content -->
    <div class="s2">
      <h1><marquee>Welcome to Student Application</marquee></h1>
      <h2>Student Exam Schedule</h2>

      <table border="1">
        <tr>
          <th>#</th>
          <th>Course</th>
          <th>Date</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Exam Name</th>
          <th>Total Mark</th>
          <th>Passing Mark</th>
          <th>Start Test</th>
        </tr>
        <% if (schedule && schedule.length > 0) { %>
          <% schedule.forEach((item, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= item.cname %></td>
              <td><%= item.date.toISOString().split('T')[0] %></td>
              <td><%= item.starttime %></td>
              <td><%= item.endtime %></td>
              <td><%= item.exname %></td>
              <td><%= item.totalmark %></td>
              <td><%= item.passingmark %></td>
              <td><button>Start Test</button></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="9">No exam schedule found.</td></tr>
        <% } %>
      </table>
    </div>
  </div>

</body>
</html>