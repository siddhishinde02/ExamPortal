<!DOCTYPE html>
<html>
<head>
  <title>Manage Subjects</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="style.css">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background-color: #f0f4f8;
      padding: 30px;
    }

    .flexparent {
      display: flex;
      gap: 20px;
      background-color: #fff;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .c1, .c2 {
      flex: 1;
      border-radius: 10px;
      padding: 20px;
      background-color: #ffffff;
      border: 1px solid #ddd;
    }

    .c1 h2 {
      font-size: 1.8em;
      font-weight: bold;
      color: #2e8b57;
      margin-bottom: 20px;
    }

    .c1 label {
      font-size: 1.1em;
      display: block;
      margin-bottom: 8px;
      color: #333;
    }

    .c1 input[type="text"] {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
      margin-bottom: 20px;
    }

    #but {
      background-color: #ffcc00;
      color: #333;
      padding: 10px;
      width: 100%;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }

    #but:hover {
      background-color: #e6b800;
    }

    .c2 h1 {
      font-size: 1.8em;
      margin-bottom: 20px;
      color: #2e8b57;
    }

     .ctable {
      width: 100%;
      border-collapse: collapse;
    }

    .ctable th, .ctable td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    .ctable th {
      background-color: #f5f5f5;
      color: #444;
    } 

     .ctable td {
      background-color: #fafafa;
    }

    .ctable a {
      text-decoration: none;
      color: #d9534f;
      font-weight: bold;
    }

    .ctable a:hover {
      color: #c9302c;
    }
  </style>
</head>
<body>
   <div class="header">
    Welcome to Exam Application System
  </div>

  <div class="slider">
    <div class="s1">
      <h3>Admin</h3>
      <a href="/admin/data">Admin</a>
    <a href="/course">Subject</a>  
      <a href="/exam">Exam</a>
      <a href="#">Questions</a>
      <a href="#">Schedule</a>
    </div>

    <div class="s2">
       <div class="flexparent">
    <div class="c1">
      <h2>Add New Course</h2>
      <form name="frm" method="post" action="/subject/add">
        <label for="cname">Course Name</label>
        <input type="text" id="cname" name="cname" placeholder="Enter Course" required>
        <input type="submit" name="b" id="but" value="Add Course">
      </form>
      <br>
      <% if (msg) { %>
        <p style="color: green; font-weight: bold;"><%= msg %></p>
      <% } %>
    </div>

    <div class="c2">
      <h1>Existing Courses</h1>
      <table class="ctable">
        <thead>
          <tr>
            <th>Course ID</th>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (courseList && courseList.length > 0) { %>
            <% courseList.forEach(course => { %>
              <tr>
                <td><%= course.cid %></td>
                <td><%= course.cname %></td>
                <td>
                  <form action="/subject/delete" method="POST" style="display:inline;">
                    <input type="hidden" name="cid" value="<%= course.cid %>">
                    <button type="submit" style="background:none;border:none;color:#d9534f;font-weight:bold;cursor:pointer;">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3">No courses available.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
    </div>
  </div>
  

</body>
</html>