<!DOCTYPE html>
<html>
<head>
  <title>Admin Table</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-800 p-10">
  
     <!-- Header -->
  <header class="bg-teal-600 text-white text-center text-3xl font-bold py-6">
    Welcome to the Exam Application System
  </header>

  <!-- Layout -->
  <div class="flex min-h-screen">
    
    <!-- Sidebar -->
    <aside class="w-64 bg-gray-100 text-center p-10">
      <h2 class="text-2xl font-semibold text-center mb-6">Admin</h2>
      <nav class="flex flex-col gap-4 text-teal-600">
        <a href="/admin/data" class="hover:underline">Admin</a>
        <a href="/subject" class="hover:underline">Subject</a>
        <a href="/exam" class="hover:underline">Exam</a>
        <a href="/questions" class="hover:underline">Questions</a>
        <a href="/schedule" class="hover:underline">Schedule</a>
      </nav>
    </aside>

    <!-- Main Content Area -->
    <main class="flex-1 p-10">
     <div class="fle">
        <h1 class="text-3xl font-bold mb-6">Admin Table</h1>

  <table class="table-auto border border-gray-300 w-[600px]">
    <thead class="bg-teal-600">
      <tr>
        <th class="px-2 py-1 border">ID</th>
        <th class="px-2 py-1 border">Name</th>
        <th class="px-2 py-1 border">Password</th>
      </tr>
    </thead>
    <tbody>
      <% admins.forEach(admin => { %>
        <tr class="hover:bg-gray-100">
          <td class="border px-2 py-1 text-center"><%= admin.adm_id %></td>
          <td class="border px-2 py-1 text-center"><%= admin.aname %></td>
          <td class="border px-2 py-1 text-center"><%= admin.apassword %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
     </div>
    </main>
  </div>
  
</body>
</html>
